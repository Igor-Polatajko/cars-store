<div class="container col-md-12 px-5">
  <div class="row">
    <% @car_records.each do |car_record| %>
      <div class="col-md-3 p-3 m-5 welcome_index_record_block">
        <div class="col-md-12 d-flex align-items-center main_img">
          <%= image_tag(car_record.images[0], :class => "w-100") %>
        </div>
        <div class="px-5 py-2">
          <div>
            <h2><%= car_record.title %></h2>
            <p><%= truncate(car_record.description) %></p>
            <h4><%= number_to_currency(car_record.price, :precision => 0) %></h4>
          </div>
          <div>
            <div class="pt-3">
              <div class="row">
                <div>
                  <div class="rounded bg-light text-secondary py-1 px-2 font-weight-bold">
                    Views: <%= car_record.views_count %>
                  </div>
                </div>
              </div>
              <div class="row d-flex justify-content-between">
                <%= link_to(car_record) do %>
                  <div class="btn btn-outline-secondary mt-2">View details &raquo;</div>
                <% end %>
                <div class="mt-2">
                  <%= render 'shared/save_unsave_btn', car_record: car_record %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="m-3 d-flex justify-content-center">
    <%= will_paginate @car_records, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>
