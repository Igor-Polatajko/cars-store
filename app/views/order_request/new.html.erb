<div class="d-flex align-items-center h-100 justify-content-center mt-5">
  <div class="h-auto p-3 rounded bg-light block-shadow">
    <h1 class="text-center">New order request</h1>
    <div>
      <%= form_for(@order_request) do |f| %>
        <% if @order_request.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@order_request.errors.count, "error") %>
              Cannot make order request</h2>
            <ul>
              <% @order_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, :class => "control-label col-md-12" %>
          <%= f.text_field :name, :class => "col-md-12", value: @current_user.try(:name) %>
        </div>
        <div class="form-group">
          <%= f.label :surname, :class => "control-label col-md-12" %>
          <%= f.text_field :surname, :class => "col-md-12", value: @current_user.try(:surname) %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, :class => "control-label col-md-12" %>
          <%= f.text_field :phone_number, rows: 3, :class => "col-md-12", value: @current_user.try(:phone_number) %>
        </div>
        <div class="form-group">
          <%= f.label :email, :class => "control-label col-md-12" %>
          <%= f.email_field :email, :class => "col-md-12", value: @current_user.try(:email) %>
        </div>
        <div class="form-group">
          <%= f.label 'Comment (optional)', :class => "control-label col-md-12" %>
          <%= f.text_area :comment, :class => "col-md-12" %>
        </div>
        <div class="form-group float-right">
          <%= f.submit 'Request order', :class => "btn btn-success" %>
        </div>
        <%= f.hidden_field :car_record_id, :value => @car_record_id %>
      <% end %>
    </div>
  </div>
</div>
