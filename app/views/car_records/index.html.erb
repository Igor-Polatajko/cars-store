<p id="notice"><%= notice %></p>
<div class="container content-container">
  <% @car_records.each do |car_record| %>
    <div class="row <%= cycle('bg-white','bg-light') %> mt-5 car-record-container p-3">
      <%= image_tag(car_record.images[0], :class => "col-md-4") %>
      <div class="col-md-8 d-flex flex-column justify-content-between">
        <div>
          <div class="row">
            <div class='col-md-12 record-title'><%= car_record.title %></div>
          </div>
          <div class="row">
            <div class='col-md-3 p-3'><%= truncate(car_record.description) %></div>
          </div>
        </div>
        <div class="row mb-3 d-flex justify-content-between">
          <div class="row">
            <div class='price ml-4 px-3'><%= number_to_currency(car_record.price, :precision => 0) %></div>
          </div>
          <div class="ml-3">
            <%= link_to 'Show', car_record, class: 'mx-2' %>
            <%= link_to 'Edit', edit_car_record_path(car_record), class: 'mx-2' %>
            <%= link_to 'Destroy', car_record, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mx-2' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
