<p id="notice"><%= notice %></p>

<div class="container-fluid">
  
    <%= link_to new_car_record_path do %>
      <div class="btn btn-primary float-right">
        New record
      </div>
    <% end %>

</div> <!-- lets leave it here for now -->


  <div class="container content-container">
    <% @car_records.each do |car_record| %>
      <div class="row <%= cycle('bg-white','bg-light') %>">
        <%= image_tag(car_record.images[0], :class => "col-md-4") %>
        <div class="col-md-6">
            <div class="row">
              <div class='col-md-3'>Title:</div><div class='col-md-3'><%= car_record.title %></div>
            </div>
            <div class="row">
             <div class='col-md-3'>Description:</div><div class='col-md-3'><%= truncate(car_record.description) %></div>
            </div>
            <div class="row">
              <div class='col-md-3'>Price:</div><div class='col-md-3'><%= number_to_currency(car_record.price, :precision => 0) %>$</div>
            </div>
            <div class="row">
              <%= link_to 'Show', car_record, class: 'mx-2' %>
              <%= link_to 'Edit', edit_car_record_path(car_record), class: 'mx-2' %>
              <%= link_to 'Destroy', car_record, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mx-2' %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
