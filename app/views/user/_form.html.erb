<div class="d-flex align-items-center h-100 justify-content-center">
  <div class="h-auto p-3 rounded bg-light block-shadow">
   <h1 class="text-center"><%= headline %></h1>
    <div>
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %>
              Cannot register user</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, :class => "control-label col-md-12" %>
          <%= f.text_field :name, :class => "col-md-12" %>
        </div>
        <div class="form-group">
          <%= f.label :surname, :class => "control-label col-md-12" %>
          <%= f.text_field :surname, :class => "col-md-12" %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, :class => "control-label col-md-12" %>
          <%= f.text_field :phone_number, rows: 3, :class => "col-md-12" %>
        </div>
        <div class="form-group">
          <%= f.label :email, :class => "control-label col-md-12" %>
          <%= f.email_field :email, :class => "col-md-12" %>
        </div>
        <div class="form-group">
          <%= f.label :password, :class => "control-label col-md-12" %>
          <%= f.password_field :password, :class => "col-md-12" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, :class => "control-label col-md-12" %>
          <%= f.password_field :password_confirmation, :class => "col-md-12" %>
        </div>
        <div class="form-group float-right">
          <%= f.submit btn_text, :class => "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
