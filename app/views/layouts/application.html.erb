<!DOCTYPE html>
<html>
  <head>
    <title>Carsstore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class='<%= controller.controller_name %>'>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark custom-nav-style">
      <%= link_to 'Car store', main_page_index_path, :class => "navbar-brand" %>
      <%= link_to 'Recently added', car_records_path, :class=>"nav-link" %>
      <%= link_to 'Add new + ', new_car_record_path, :class=>"nav-link ml-auto" %>
    </nav>
    <!-- Navbar end -->
    <%= yield %>
  </body>
</html>
